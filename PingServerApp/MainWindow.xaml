<Window x:Class="PingServerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingServerApp"
        mc:Ignorable="d"
        Title="Server Pinger" Height="196" Width="380">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,-60,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Height="22" Width="182"><Run Language="en-gb" Text="Enter the Server IP or name below"/></TextBlock>
        <TextBox HorizontalAlignment="Center" KeyDown="OnKeyDown" MaxLength="15" Name="ipBox" TextWrapping="Wrap" Text="Server IP" VerticalAlignment="Center" Width="120" Height="23"/>
    </Grid>
</Window>
